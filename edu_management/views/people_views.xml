<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_edu_student_tree" model="ir.ui.view">
        <field name="name">edu.student.tree</field>
        <field name="model">edu.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="student_code"/>
                <field name="class_id"/>
                <field name="section_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_edu_student_kanban" model="ir.ui.view">
        <field name="name">edu.student.kanban</field>
        <field name="model">edu.student</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="class_id"/></div>
                            <div><field name="section_id"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_edu_student_form" model="ir.ui.view">
        <field name="name">edu.student.form</field>
        <field name="model">edu.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="student_code"/>
                        <field name="active"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name="class_id"/>
                        <field name="section_id"/>
                    </group>
                    <notebook>
                        <page string="Parents / Guardians">
                            <field name="parent_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_edu_teacher_tree" model="ir.ui.view">
        <field name="name">edu.teacher.tree</field>
        <field name="model">edu.teacher</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_edu_teacher_kanban" model="ir.ui.view">
        <field name="name">edu.teacher.kanban</field>
        <field name="model">edu.teacher</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="view_edu_teacher_form" model="ir.ui.view">
        <field name="name">edu.teacher.form</field>
        <field name="model">edu.teacher</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_code"/>
                        <field name="active"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <notebook>
                        <page string="Assignments">
                            <group>
                                <field name="subject_ids" widget="many2many_tags"/>
                                <field name="class_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_edu_parent_tree" model="ir.ui.view">
        <field name="name">edu.parent.tree</field>
        <field name="model">edu.parent</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_edu_parent_kanban" model="ir.ui.view">
        <field name="name">edu.parent.kanban</field>
        <field name="model">edu.parent</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="phone"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="view_edu_parent_form" model="ir.ui.view">
        <field name="name">edu.parent.form</field>
        <field name="model">edu.parent</field>
        <field name="arch" type="xml">
            <form string="Parent / Guardian">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="active"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <notebook>
                        <page string="Students">
                            <field name="student_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">edu.student</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="action_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">edu.teacher</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="action_parent" model="ir.actions.act_window">
        <field name="name">Parents / Guardians</field>
        <field name="res_model">edu.parent</field>
        <field name="view_mode">list,kanban,form</field>
    </record>
</odoo>
