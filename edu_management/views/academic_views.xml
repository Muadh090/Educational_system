<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_academic_year_tree" model="ir.ui.view">
        <field name="name">edu.academic.year.tree</field>
        <field name="model">edu.academic.year</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_academic_year_kanban" model="ir.ui.view">
        <field name="name">edu.academic.year.kanban</field>
        <field name="model">edu.academic.year</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="date_start"/> - <field name="date_end"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_academic_year_form" model="ir.ui.view">
        <field name="name">edu.academic.year.form</field>
        <field name="model">edu.academic.year</field>
        <field name="arch" type="xml">
            <form string="Academic Year">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Terms">
                            <field name="term_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_academic_term_tree" model="ir.ui.view">
        <field name="name">edu.academic.term.tree</field>
        <field name="model">edu.academic.term</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="academic_year_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_academic_term_kanban" model="ir.ui.view">
        <field name="name">edu.academic.term.kanban</field>
        <field name="model">edu.academic.term</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="academic_year_id"/></div>
                            <div><field name="date_start"/> - <field name="date_end"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_academic_term_form" model="ir.ui.view">
        <field name="name">edu.academic.term.form</field>
        <field name="model">edu.academic.term</field>
        <field name="arch" type="xml">
            <form string="Academic Term">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="academic_year_id"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_academic_class_tree" model="ir.ui.view">
        <field name="name">edu.academic.class.tree</field>
        <field name="model">edu.academic.class</field>
