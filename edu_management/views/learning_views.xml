<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_edu_assignment_tree" model="ir.ui.view">
        <field name="name">edu.assignment.tree</field>
        <field name="model">edu.assignment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="teacher_id"/>
                <field name="class_id"/>
                <field name="section_id"/>
                <field name="subject_id"/>
                <field name="due_date"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_edu_assignment_kanban" model="ir.ui.view">
        <field name="name">edu.assignment.kanban</field>
        <field name="model">edu.assignment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="teacher_id"/></div>
                            <div><field name="due_date"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_edu_assignment_form" model="ir.ui.view">
        <field name="name">edu.assignment.form</field>
        <field name="model">edu.assignment</field>
        <field name="arch" type="xml">
            <form string="Assignment">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="teacher_id"/>
                        <field name="due_date"/>
                        <field name="active"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name="class_id"/>
                        <field name="section_id"/>
                        <field name="subject_id"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Students">
                            <field name="student_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_edu_material_tree" model="ir.ui.view">
        <field name="name">edu.elearning.material.tree</field>
        <field name="model">edu.elearning.material</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="teacher_id"/>
                <field name="class_id"/>
                <field name="section_id"/>
                <field name="subject_id"/>
                <field name="publish_date"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_edu_material_kanban" model="ir.ui.view">
        <field name="name">edu.elearning.material.kanban</field>
        <field name="model">edu.elearning.material</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="teacher_id"/></div>
                            <div><field name="publish_date"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="view_edu_material_form" model="ir.ui.view">
        <field name="name">edu.elearning.material.form</field>
        <field name="model">edu.elearning.material</field>
        <field name="arch" type="xml">
            <form string="E-learning Material">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="teacher_id"/>
                        <field name="publish_date"/>
                        <field name="active"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name="class_id"/>
                        <field name="section_id"/>
                        <field name="subject_id"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Students">
                            <field name="student_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_edu_cbt_exam_tree" model="ir.ui.view">
        <field name="name">edu.cbt.exam.tree</field>
        <field name="model">edu.cbt.exam</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="teacher_id"/>
                <field name="class_id"/>
                <field name="section_id"/>
                <field name="subject_id"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_edu_cbt_exam_kanban" model="ir.ui.view">
        <field name="name">edu.cbt.exam.kanban</field>
        <field name="model">edu.cbt.exam</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="teacher_id"/></div>
                            <div><field name="start_datetime"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="view_edu_cbt_exam_form" model="ir.ui.view">
        <field name="name">edu.cbt.exam.form</field>
        <field name="model">edu.cbt.exam</field>
        <field name="arch" type="xml">
            <form string="CBT / Online Exam">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="teacher_id"/>
                        <field name="start_datetime"/>
                        <field name="end_datetime"/>
                        <field name="duration_minutes"/>
                        <field name="active"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name="class_id"/>
                        <field name="section_id"/>
                        <field name="subject_id"/>
                    </group>
                    <notebook>
                        <page string="Instructions">
                            <field name="instructions"/>
                        </page>
                        <page string="Students">
                            <field name="student_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_assignment" model="ir.actions.act_window">
        <field name="name">Assignments</field>
        <field name="res_model">edu.assignment</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="action_material" model="ir.actions.act_window">
        <field name="name">E-learning Materials</field>
        <field name="res_model">edu.elearning.material</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="action_cbt_exam" model="ir.actions.act_window">
        <field name="name">CBT / Online Exams</field>
        <field name="res_model">edu.cbt.exam</field>
        <field name="view_mode">list,kanban,form</field>
    </record>
</odoo>
