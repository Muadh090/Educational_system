<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fee_structure_tree" model="ir.ui.view">
        <field name="name">edu.fee.structure.tree</field>
        <field name="model">edu.fee.structure</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="academic_year_id"/>
                <field name="term_id"/>
                <field name="class_id"/>
                <field name="total_amount"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_fee_structure_kanban" model="ir.ui.view">
        <field name="name">edu.fee.structure.kanban</field>
        <field name="model">edu.fee.structure</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="term_id"/></div>
                            <div><field name="class_id"/></div>
                            <div><field name="total_amount"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_fee_structure_form" model="ir.ui.view">
        <field name="name">edu.fee.structure.form</field>
        <field name="model">edu.fee.structure</field>
        <field name="arch" type="xml">
            <form string="Fee Structure">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="academic_year_id"/>
                        <field name="term_id"/>
                        <field name="class_id"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Fee Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="fee_type"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="total_amount" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_fee_line_tree" model="ir.ui.view">
        <field name="name">edu.fee.line.tree</field>
        <field name="model">edu.fee.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="fee_structure_id"/>
                <field name="name"/>
                <field name="fee_type"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="price_unit"/>
                <field name="subtotal"/>
            </tree>
        </field>
    </record>

    <record id="view_student_invoice_tree" model="ir.ui.view">
        <field name="name">edu.student.invoice.tree</field>
        <field name="model">edu.student.invoice</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="student_id"/>
                <field name="class_id"/>
                <field name="term_id"/>
                <field name="amount_total"/>
                <field name="payment_status"/>
            </tree>
        </field>
    </record>

    <record id="view_student_invoice_kanban" model="ir.ui.view">
        <field name="name">edu.student.invoice.kanban</field>
        <field name="model">edu.student.invoice</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="student_id"/></div>
                            <div><field name="amount_total"/></div>
                            <div><field name="payment_status"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_student_invoice_form" model="ir.ui.view">
        <field name="name">edu.student.invoice.form</field>
        <field name="model">edu.student.invoice</field>
        <field name="arch" type="xml">
            <form string="Student Invoice">
                <header>
                    <button name="action_generate_invoice" type="object" string="Generate Invoice" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="student_id"/>
                    </group>
                    <group>
                        <field name="class_id"/>
                        <field name="term_id"/>
                        <field name="fee_structure_id"/>
                    </group>
                    <notebook>
                        <page string="Invoice Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="fee_type"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Accounting">
                            <group>
                                <field name="move_id"/>
                                <field name="payment_status"/>
                            </group>
                        </page>
                    </notebook>
                    <group>
                        <field name="amount_total" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fee_structure" model="ir.actions.act_window">
        <field name="name">Fee Structures</field>
        <field name="res_model">edu.fee.structure</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <record id="action_fee_line" model="ir.actions.act_window">
        <field name="name">Fee Lines</field>
        <field name="res_model">edu.fee.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_student_invoice" model="ir.actions.act_window">
        <field name="name">Student Invoices</field>
        <field name="res_model">edu.student.invoice</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
</odoo>
